<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/disableDiagButton"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_marginBottom="252dp"
        android:onClick="onClickDisableDiag"
        android:text="Disable DiagMode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/enableDiagButton"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:onClick="onClickEnableDiag"
        android:text="Enable DiagMode"
        app:layout_constraintBottom_toTopOf="@+id/disableDiagButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>